      <section class="article-pick">
                <img class="article-pick__img" src="{{imgCover}}"
                 alt="Article pick {{title}}"></img> 
        <div class="article-pick__info-container">
             <ul class="article-pick__categories list">
            {{#each category}}
            <li class="article-pick__categories-item">{{this}}</li>
            {{/each}}
        </ul>
        <h3 class="article-pick__title">{{title}}</h3>
        <p class="article-pick__description-cover">{{subDescription}}</p>
        <p class="article-pick__author-name">By {{author.name}} {{author.surname}}</p>
