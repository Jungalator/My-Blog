    </ul>
    <h3 class="article-main__general-title">{{title}}</h3>
    <p class="article-main__general-summary-desc">{{summaryDescription}}</p>
                
      <ul class="article-main__author-categories list">
            {{#each category}}
            <li class="article-main__author-categories-item">{{this}}</li>
            {{/each}}
        </ul>
        <hr class="article-main__author-line">
<article class="article-main__author">
        <img class="article-main__author-avatar" src="{{#if author.avatar}}{{author.avatar}}{{else}}/images/no-avatar.png {{/if}}" alt="Author avatar">
        <ul class="article-main__author-info list">
            <li class="article-main__author-name">By {{author.name}} {{author.surname}}</li>
            <li class="article-main__author-profession">{{#each author.profession}}
                <p class="article-main__author-profession-info">{{this}}</p>
                {{/each}}
            </li>
        </ul>
</article>
</article>

</div>
